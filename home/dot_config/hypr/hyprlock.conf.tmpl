{{ warnf "dot_config/hypr/hyprlock.conf.tmpl\n" }}

source = ~/.config/hypr/material.conf

$font = {{ $.font.family }}

# GENERAL
general {
  hide_cursor = false
  ignore_empty_input = true
  immediate_render = true
  fail_timeout = 0
}

# BACKGROUND
background {
  monitor =
  path = ~/.config/theming/wallpaper.png
  blur_passes = 0
  color = $background
  reload_time = 0
  crossfade_time = 1
}

# LAYOUT
label {
  monitor =
  text = Layout: $LAYOUT
  color = $onSurface
  font_size = 25
  font_family = $font
  position = 30, -30
  halign = left
  valign = top
}

# TIME
label {
  monitor =
  text = $TIME
  color = $onSurface
  font_size = 90
  font_family = $font
  position = -30, 0
  halign = right
  valign = top
}

# DATE
label {
  monitor =
  text = cmd[update:43200000] date +"%A, %d %B %Y"
  color = $onSurface
  font_size = 25
  font_family = $font
  position = -30, -150
  halign = right
  valign = top
}

# USER AVATAR
image {
  monitor =
  path = $HOME/.face
  size = 100
  border_color = $primary
  position = 0, 75
  halign = center
  valign = center
}

# INPUT FIELD
input-field {
  monitor =
  size = 300, 60
  outline_thickness = 4
  dots_size = 0.2
  dots_spacing = 0.2
  dots_center = true
  outer_color = $primary
  inner_color = $surface
  font_color = $onSurface
  fade_on_empty = false
  placeholder_text = <span foreground="##$onSurfaceAlpha"><i>ó°Œ¾ Logged in as </i><span foreground="##$primaryAlpha">$USER</span></span>
  hide_input = false
  check_color = $primary
  fail_color = $error
  fail_text = <i>$FAIL <b>($ATTEMPTS)</b></i>
  capslock_color = $tertiary
  position = 0, -47
  halign = center
  valign = center
}