{{ $theme := (include "dot_config/theming/theme.json" | fromJson) }}

* {
    font-family: JetBrainsMono NF, Roboto, Helvetica, Arial, sans-serif;
    font-size: 13px;
}

window#waybar {
    background-color: {{ $theme.surfaceContainer }};
    border-bottom: none;
    color: {{ $theme.onSurface }};
    transition-property: background-color;
    transition-duration: .5s;
}

window#waybar.hidden {
    opacity: 0.2;
}

/*
window#waybar.empty {
